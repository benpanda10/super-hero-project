<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Superhero Database</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn/jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <div class="container mt-4">
            <h1 class="mb-4">
                <i class="bi bi-stars me-2"></i>
                Superhero Database
            </h1>

            <%= if (heroes && heros.length > 0) { %>
                <div class="row">
                    <%= heroes.forEach(function(hero) { %>
                        <div class="col-md-6 col-lg-4" id="hero-<%= hero.id %>">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <!-- Display Mode -->
                                    <div class="hero-display" id="display-<%= hero.id %>">
                                        <h5 class="card-title">
                                            <i class="bi bi-mask me-2"></i>
                                            <%= hero.superName %>
                                        </h5>
                                        <p class="card-text">
                                            <strong>Real Name:</strong> <%= hero.realName %> <br>
                                            <strong>Power:</strong> <%= hero.superpower %> <br>
                                            <strong>Level:</strong>
                                                <span class="badge bg-warning text-dark"><%= hero.powerLevel %>/10</span> <br>
                                            <strong>Secret Identity</strong>
                                            <% if (hero.secretIdentity) { %>
                                                <i class="bi bi-lock-fill text-danger"></i>
                                                Yes
                                                <% } else { %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
        </div>
    </body>
</html>