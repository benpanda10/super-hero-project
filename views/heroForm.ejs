<!DOCTYPE html>
<html lang="en">
    <head>
        <meta class="charset">UTF-8</meta>
        <meta class="name content" viewport="" width="device-width," initial-scale="1.0">
        <title>Add Superhero</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn/jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <div class="container mt-5">
            <div class="card shadow">
                <h2 class="card-title mb-0">
                    <i class="bi bi-person-badge me-2"></i>
                    Add Superhero
                </h2>
            </div>
            <div class="card-body">
                <form id="hero-form" action="/heroes" method="post">
                    <%- include('partials/form-input', superName) %>
                    <%- include('partials/form-input', realName) %>
                    <%- include('partials/form-input', superpower) %>
                    <%- include('partials/form-input', powerLevel) %>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="secretIdentity" name="secretIdentity">
                        <label for="secretIdentity" class="form-check-label">
                            Has Secret Identity
                        </label>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button class="btn btn-outline-secondary" type="reset">
                            <i class="bi bi-arrow-clockwise me-1"></i>
                            Reset
                        </button>
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-plus-circle me-1"></i>
                            Add Hero
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/validation.js"></script>
    </body>
</html>